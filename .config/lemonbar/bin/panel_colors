#!/bin/sh

# Colors
WHITE="#E0E5EF"
LDIM_WHITE="#abb2bf"
DIM_WHITE="#6F7787"
CYAN="#56b6c2"
RED="#e06c75"
BLUE="#61afef"
B_BLUE="#92CFFF"
GREEN="#98c379"
YELLOW="#d19a66"
MAGENTA="#D07EE8"
BLACK="#282c34"
GREY="#2D333F"
BLOCK_GREY="#33383D"
LIGHTER_GREY="#4D525C"
LIGHT_GREY="#3A3D45"

COLOR_MONITOR_FG="#8dbcdf"
COLOR_MONITOR_BG="#333232"
COLOR_FOCUSED_MONITOR_FG="#b1d0e8"
COLOR_FOCUSED_MONITOR_BG="#144b6c"

WS_FOCUSED_FG="$B_BLUE"
WS_FOCUSED_BG="$LIGHT_GREY"

# FREE WORKSPACE
COLOR_FREE_FG="$DIM_WHITE"
COLOR_FREE_BG="$GREY"
COLOR_FOCUSED_FREE_FG="$LDIM_WHITE"
COLOR_FOCUSED_FREE_BG="$WS_FOCUSED_BG"

# OCCUPIED WORKSPACE
COLOR_OCCUPIED_FG="$LDIM_WHITE"
COLOR_OCCUPIED_BG="$GREY"
COLOR_FOCUSED_OCCUPIED_FG="$WS_FOCUSED_FG"
COLOR_FOCUSED_OCCUPIED_BG="$WS_FOCUSED_BG"

# URGENT WORKSPACE
COLOR_URGENT_FG="$RED"
COLOR_URGENT_BG="$GREY"
COLOR_FOCUSED_URGENT_FG="$RED"
COLOR_FOCUSED_URGENT_BG="$LIGHT_GREY"

# BLOCK COLORS

COLOR_STATE_FG="$GREEN"
COLOR_STATE_BG="$GREY"

COLOR_TITLE_FG="$MAGENTA"
COLOR_TITLE_BG="$GREY"

COLOR_BLOCK="$BLOCK_GREY"

COLOR_SYS="$BLUE"

COLOR_NET="$GREEN"
COLOR_N_NET="$RED"

COLOR_VOL="$CYAN"
COLOR_N_VOL="$RED"

COLOR_MEM="$YELLOW"

COLOR_CPU="$MAGENTA"

COLOR_PLAYER_PAUSED="$DIM_WHITE"
COLOR_PLAYER_PLAY="$CYAN"
COLOR_PLAYER_NONE="$LIGHTER_GREY"

COLOR_TRAY="$MAGENTA"

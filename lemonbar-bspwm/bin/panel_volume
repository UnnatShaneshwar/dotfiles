#!/bin/bash

VOLUME_MUTE=""
VOLUME_LOW=""
VOLUME_MID=""
VOLUME_HIGH=""
SOUND_LEVEL=$(pactl list sinks | grep '^[[:space:]]Volume:' | \
    head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')
MUTED=$(pactl list sinks | awk '/Mute/ { print $2 }')

. panel_colors

if [ "$MUTED" = "yes" ]
then
    echo "V%{F-}%{B$COLOR_BLOCK}%{U$COLOR_N_VOL}%{+u} MUTED " > $PANEL_FIFO
else
    echo "V%{F-}%{B$COLOR_BLOCK}%{U$COLOR_VOL}%{+u} $SOUND_LEVEL% " > $PANEL_FIFO
fi
